extends ./_layout
include ./components/telegramLogin
include ./components/slideHeader


block main
    section#home
        .top-container
            .wrapper
                .header
                    figure.logo
                        img(src="", alt="")
                    figure.profile
                        img
                        figcaption UserName
                    
                dl.gram
                    dt 보유수량
                    dd.number 2630009.123456789
                .receive
                    p 그램주소
                    .box
                        .address -1:d88335c70d437a2a9201383b1b17c6a88d80416d6d79c244505708dfe179885d
                        figure.copy-icon
                            img(src="https://icongr.am/clarity/copy.svg?size=22&color=000000", alt="")
                         
        ul.tab
            li.withdraw-btn
                span 출금하기
            li.staking-btn
                span 스테이킹
        ul.list
            - for(var i = 0; i < 10; i++)
                if i % 2 == 0
                    li.withdraw-card
                        dl
                            dt 출금
                            dd 완료
                        dl
                            dt 금액
                            dd 9999.99999999
                        dl
                            dt 날짜
                            dd 2020.06.03 14:36:48
                        dl
                            dt 거래ID
                            dd cbcf590b806ad3669c7b8d07274897e426391a5504121385f5bc5c349c3a48ba
                else
                    li.deposit-card 
                        dl
                            dt 입금
                            dd 완료
                        dl
                            dt 금액
                            dd 9999.99999999
                        dl
                            dt 날짜
                            dd 2020.06.03 14:36:48
                        dl
                            dt 거래ID
                            dd cbcf590b806ad3669c7b8d07274897e426391a5504121385f5bc5c349c3a48ba
        .send-container.sliding
            +slideHeader('출금하기')
            .form-wrapper.centered
                form(action="")
                    label
                        input(type="text")
                        p 주소
                    label
                        input(type="text")
                        p 금액
                    button(type='button') 출 금
        .staking-container.sliding
            +slideHeader('스테이킹')
            button(type='button').centered 스테이킹 참여하기
        .invest-container.sliding
            +slideHeader('스테이킹 참여하기')