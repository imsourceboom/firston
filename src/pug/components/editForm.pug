include ./fileUpload

mixin editForm(kind)
    article.edit-form&attributes(attributes)
        .top
            label(for="title")
                span 제목
                div
                input(id="title" type="text")
            if kind === undefined
                select
                    option(value="") 업데이트
                    option(value="") 뉴스
        .errors 제목을 입력해 주세요.
        +fileUpload('대표이미지', false, false)
        .edit-box
        .errors 제목을 입력해 주세요!
        +fileUpload('파일선택', true, true)